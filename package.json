{
  "name": "active911-hud",
  "version": "0.0.1",
  "main": "app/application.js",
  "license": "Apache-2.0",
  "description": "A friendly Heads Up Display (HUD) for viewing current call details and response status of personnel",
  "author": "Brett P <bap14@users.noreply.github.com>",
  "repository": "",
  "build": {
    "appId": "com.github.users.noreply.bap14.active911-hud",
    "productName": "Active911 HUD",
    "copyright": "Copyright Â© 2017 ${author}",
    "windows": {
      "target": "nsis",
      "icon": "build/icons/active911.ico"
    },
    "nsis": {
      "installerIcon": "build/icons/active911.ico",
      "uninstallerIcon": "build/icons/active911.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "build/icons/active911.icns"
    },
    "dmg": {
      "background": "",
      "backgroundColor": "#778899"
    }
  },
  "scripts": {
    "install": "electron-builder install-app-deps",
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "devDependencies": {
    "electron-builder": "^19.27.7",
    "less": "^2.7.3",
    "less-plugin-clean-css": "^1.5.1"
  }
}
