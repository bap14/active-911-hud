{
  "name": "active911-hud",
  "version": "0.0.1",
  "main": "app/application.js",
  "license": "Apache-2.0",
  "description": "A friendly Heads Up Display (HUD) for viewing current call details and response status of personnel",
  "author": "Brett P <bap14@users.noreply.github.com>",
  "repository": "https://github.com/bap14/active911-hud.git",
  "build": {
    "appId": "com.github.users.noreply.bap14.active911-hud",
    "productName": "Active911 HUD",
    "copyright": "Copyright Â© 2017 ${author}",
    "windows": {
      "target": "nsis",
      "icon": "build/icons/active911.ico"
    },
    "nsis": {
      "installerIcon": "build/icons/active911.ico",
      "uninstallerIcon": "build/icons/active911.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "build/icons/active911.icns"
    },
    "dmg": {
      "background": "",
      "backgroundColor": "#778899"
    }
  },
  "scripts": {
    "build": "npm run prebuild && node lib/build.js",
    "clean": "node lib/clean.js",
    "prebuild": "npm run clean",
    "install": "electron-builder install-app-deps",
    "start": "npm run build && electron .",
    "pack": "npm run prebuild && electron-builder --dir",
    "dist": "npm run prebuild && electron-builder"
  },
  "devDependencies": {
    "copy": "^0.3.1",
    "copy-files": "^0.1.0",
    "electron": "~1.7.9",
    "electron-builder": "^19.45.5",
    "less": "^2.7.3",
    "less-plugin-clean-css": "^1.5.1",
    "rimraf": "^2.6.2"
  },
  "dependencies": {
    "shelljs": "^0.8.0"
  }
}
